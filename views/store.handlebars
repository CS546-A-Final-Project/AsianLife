<nav>
  <a href="/home">Home</a>
  <a href="/profile">{{name}}</a>
  {{#if isAdminAndHasAStore}}
  <a href="/store/{{storeId}}">My Store</a>
  {{/if}}
  <a href="/profile" id="avatar">
    <img src="/public/images/users/{{avatarId}}" alt="Avatar">
  </a>
  <div class="dropdown">
    <button class="dropbtn">Personal Center</button>
    <div class="dropdown-content">
      <a href="/profile">Profile</a>
      <a href="/password">Password Change</a>
      <a href="/logout">Logout</a>
    </div>

  </div>
</nav>

<p>{{store.store_name}}</p>
<div class="store-comment">
  <a class="link-button" href="/storeComments/{{storeID}}">
    Store Comments
  </a>

  <button id="store_review" name="store_review" hidden>Store Review</button>

  <button id="store_edit" name="store_edit" hidden>EDIT</button>
  {{#if isOwner}}
  <a class="link-button" href="/addproduct">
    ADDPRODUCT
  </a>
  <a class="link-button" href="/editstore/{{storeID}}">
    EDITSTORE
  </a>
  {{/if}}
  <p>Contact Infomation</p>
  <p>Phone:{{contact_information.phone}}</p>
  <p>Email:{{contact_information.email}}</p>
  <p>Address:{{store_location.streetAddress}},{{store_location.city}},{{store_location.state}}</p>

  <h1>The Products of {{title}}</h1>

  {{!-- {{#if hasStoreProducts}} --}}
  <div class="product-grid">
    {{#each storeProducts}}
    <div class="product-card">
      <a href="/products/{{this._id}}">
        <img class="product-image" src="/public/images/products/{{this.productImage}}" alt="{{this.productImage}}">
        <div class="product-info">
          <h3>{{this.productName}}</h3>
          <p>Price: ${{this.productPrice}}</p>
          <p>Rating: {{this.productRating}}</p>
          <p>Review:{{this.firstReview}}</p>
        </div>
      </a>
    </div>
    {{/each}}
  </div>