<nav>
    <a href="/home">Home</a>
    <a href="/profile">{{name}}</a>
    <a href="/profile" id="avatar">
        <img src="/public/images/users/{{avatarId}}" alt="Avatar">
    </a>
    <div class="dropdown">
        <button class="dropbtn">Personal Center</button>
        <div class="dropdown-content">
            <a href="/profile">Profile</a>
            <a href="/password">Password Change</a>
            <a href="/logout">Logout</a>
        </div>

    </div>
</nav>

<div class="searchContainer">
    <form id="searchForm" action="/home/search" method="POST">
        <div class="search-container">
            <div class="search-dropdown">
                <label for="searchType">Search for:</label>
                <select id="searchType" name="searchType">
                    <option value="" selected disabled hidden>Select an option</option>
                    <option value="store">Store</option>
                    <option value="product">Product</option>
                </select>
            </div>
            <div class="search-input">
                <input type="text" id="searchTerm" name="searchTerm" placeholder="Enter your search term">
                <button type="submit">Search</button>
            </div>
        </div>
    </form>
</div>

{{!-- Check for no results message --}}
{{#if noResultsMessage}}
    <div class="no-results-message">
        <p>{{noResultsMessage}}</p>
    </div>
{{else}}
    <div class="search-results">
        {{#each searchResult}}
            <div class="search-result-item">
                <h3>{{this.name}}</h3>
            </div>
        {{/each}}
    </div>
{{/if}}


<nav>
    <a href="/stores" class="nav-link store-link">All Stores</a>
</nav>

<nav>
    <a href="/products" class="nav-link product-link">All Products</a>
</nav>

<section class="recommendation-section">
    <h2>Recommended Stores</h2>
    <div class="recommendation-container">
        {{#each recommendedStores}}
            <div class="recommendation-item">
                <img src="/public/images/stores/{{this.photo_id}}">
                <p>{{this.name}}</p>
            </div>
        {{/each}}
    </div>
</section>


<section class="recommendation-section">
    <h2>Recommended Products</h2>
    <div class="recommendation-container">
        {{#each recommendedProducts}}
            <div class="recommendation-item">
                <img src="/public/images/products/{{this.productImage}}">
                <p>{{this.name}}</p>
            </div>
        {{/each}}
    </div>
</section>
