<div class="container">
    <form id="add-product-form" action="/addProduct" method="POST">
        <h2>Add Product</h2>

        <label for="productName">Product Name:</label>
        <input type="text" id="productName" name="productName" value="{{productName}}" required>

        <label for="category">Product Category:</label>
        <select id="category" name="category">
            <option value="" disabled {{selected.default}}>Select</option>
            <option value="Fresh Produce" {{selected.FreshProduce}}>Fresh Produce</option>
            <option value="Dairy Products" {{selected.DairyProducts}}>Dairy Products</option>
            <option value="Meat and Poultry" {{selected.MeatAndPoultry}}>Meat and Poultry</option>
            <option value="Seafood" {{selected.Seafood}}>Seafood</option>
            <option value="Frozen Foods" {{selected.FrozenFoods}}>Frozen Foods</option>
            <option value="Bakery and Confectionery" {{selected.BakeryAndConfectionery}}>Bakery and Confectionery</option>
            <option value="Beverages" {{selected.Beverages}}>Beverages</option>
            <option value="Snacks" {{selected.Snacks}}>Snacks</option>
            <option value="Canned and Jarred Goods" {{selected.CannedAndJarredGoods}}>Canned and Jarred Goods</option>
            <option value="Dry Goods and Staples" {{selected.DryGoodsAndStaples}}>Dry Goods and Staples</option>
        </select>

        <label for="productPrice">Product Price:</label>
        <input type="text" id="productPrice" name="productPrice" value="{{productPrice}}" required>

        <label for="manufactureDate">Manufacture Date:</label>
        <input type="text" id="manufactureDate" name="manufactureDate" value="{{manufactureDate}}" required>

        <label for="expirationDate">Erexpiration Date:</label>
        <input type="text" id="expirationDate" name="expirationDate" value="{{expirationDate}}" required>

        {{!--store id怎么搞？--}}
        {{!--
        <label for="address">Store Address:</label>
        <input type="text" id="address" name="address" value="{{address}}" required>

        <label for="city">City:</label>
        <input type="text" id="city" name="city" value="{{city}}" required>

        --}}

        <button type="submit">Add Product</button>
    </form>  
    <ul class="errorContainer" id="errorContainer">
        {{#if hasErrors}}
        {{#each errors}}
        <li>
            {{this}}
        </li>
        {{/each}}
        {{/if}}
    </ul>
</div>

<script src="/public/js/front_end_validation.js"></script>