<h1>{{title}} Comment Detail</h1>

<div class="comment-section">
  <ul class="comment-list">
    <li>
      {{comment}}
      {{#if isCommenter}}
        <p class="comment-tag">(Your Comment)</p>
      {{/if}}
      {{#if answer}}
        <ul class="answer-list">
          <li class="answer-arrow">&rarr; {{answer}}</li>
        </ul>
      {{/if}}
    </li>
  </ul>

  {{#if isAdmin}}
    {{#unless answer}}
      <form id="answer-form" action="/commentsDetail/{{commentId}}" method="POST" class="answer-form">
        <label for="answer">Owner Answer:</label>
        <input type="text" name="answerInput" id="answerInput" class="answer-input">
        <button type="submit" class="answer-submit-btn">Add Answer</button>
      </form>

      <ul class="error-container" id="errorContainer">
        {{#if hasErrors}}
          {{#each errors}}
            <li>{{this}}</li>
          {{/each}}
        {{/if}}
      </ul>
    {{/unless}}
  {{else}}
    <p class="owner-restriction">Only the store owner can answer the comment</p>
  {{/if}}
</div>

<script src="/public/js/front_end_validation.js"></script>